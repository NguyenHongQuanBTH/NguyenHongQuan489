@model NguyenHongQuan489.Models.Person
@{
    ViewData["Title"] = "Create";
}
<div class="w3-row w3-teal col-md-2">
<h2 class="w3-center w3-text" style="font-size: 20px;">Thêm bảng mới</h2>
</div>
<div class="row">
<div class="col-md-3">
<form asp-action="Create">
<div asp-validation-summary="ModelOnly"></div>
<div class="form-group">
    <label asp-for="MaNV" class="control-label">Mã nhân viên</label>
    <input asp-for="MaNV" class="form-control">
    <span asp-validation-for="MaNV" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TenNV" class="control-label">Tên nhân viên</label>
    <input asp-for="TenNV" class="form-control">
    <span asp-validation-for="TenNV" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address" class="control-label">Địa chỉ</label>
    <input asp-for="Address" class="form-control">
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div>
    <input type="submit" value="Save" class="btn btn-primary" style="margin-top: 20px;">
</div>

</form>
</div>
</div>
<div>
    <a asp-action="Index"><input type="submit" value="Back" class="btn btn-primary" style="margin-top: 20px;"></a>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}